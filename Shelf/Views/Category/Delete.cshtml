@using ShelfWeb.Models
@model Category

<form method="post" class="col-10">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <div>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</form>
