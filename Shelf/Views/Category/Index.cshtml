@using ShelfWeb.Models;
@model List<Category>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col">
            <h2 class="text-body">Category List</h2>
        </div>
        <div class="col text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create new Category
            </a>
        </div>
    </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model.OrderBy(e => e.DisplayOrder))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                    </tr>
                }
            </tbody>
        </table>
</div>