@model int

<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment Successfull!</h1>
        <p>You Order Number is : @Model</p>
    </div>
    <div class="col-12 text-center" style="color: red">
        <p>Payment has been placed successfully!</p>
        <br />
        <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model" class="btn btn-primary form-control my-1">Go back to Order Details</a>
    </div>
</div>